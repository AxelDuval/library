{% extends 'base.html.twig' %}

{% block title %}Modifier un livre
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Modifier un livre</h1>


		{{ form(form) }}

			{% if status == 1 %}
				<a href="{{path('delete_book',{id})}}" class="btn btn-danger">
					Supprimer le livre
				</a>
			{% endif %}

	</div>
	{% endblock %}

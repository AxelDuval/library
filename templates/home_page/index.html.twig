{% for message in app.flashes('success') %}
<div class="alert alert-success">
	{{ message }}
</div>
{% endfor %}

<div class="book-list">

	<div class="text-align-center mx-5 mt-5 mb-3">
		<h1>Les Livres</h1>
	</div>



	<table id="books" class="table responsive">
		<thead class="table-yellow" >
			<tr>
				<th scope="col">
					Image
				</th>
				<th scope="col">
					Titre
				</th>
				<th scope="col">
					Auteur
				</th>
				<th scope="col">
					Disponibilité
				</th>
				<th scope="col">
					Emprunteur
				</th>
				<th scope="col">
					Catégorie

				</th>
				<th scope="col"></th>
				<th scope="col"></th>

			</tr>
		</thead>
		<tbody>
			<tr>
				{% for book in books %}
				<th scope="row">
				<img src="{{ book.getImageName() }}" class="book_img"></img>
				</th>
				<td>
					{{ book.getTitle() }}
				</td>
				<td>
					{{ book.getAuthor() }}
				</td>
				<td>
					{% if book.getStatus() %}
					Disponible
					{% else %}
					Indisponible
					{% endif %}
				</td>
				<td>
					{% if (book.getlastUser() != null) %}
					{{ book.getLastUser().getLastName() }}
					{% else %}
					Aucun
					{% endif %}
				</td>

				<td>
					{{ book.getCategory() }}
				</td>

				<td>
					<a href="detail/{{ book.getId() }}" class="btn btn-warning">
						Détail
					</a>
				</td>

				

				<td>
					{% if (book.getlastUser() != null) %}
					<a href="return/{{ book.getId() }}" class="btn btn-yellow">
						Rendu
					</a>
					{% endif %}

				</td>

			</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="mt-2">
	<a href="{{ path('book_create') }}" class="float-right btn btn-yellow">
		Ajouter un livre
	</a>
</div>

</div>
</main>
</div>
{% endblock %}
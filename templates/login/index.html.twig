{% extends 'base.html.twig' %}

          

        {% block stylesheets %}
			<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
			<script src="https://apis.google.com/js/platform.js" async defer></script>
			<link href="{{ asset('../public/CSS/main.css') }}" rel="stylesheet"/>
			<link href="{{ asset('../public/CSS/login.css') }}" rel="stylesheet"/>
        {% endblock %}

{% block body %}

<header>
	<div class="text-center img-fluid img-thumbnail">
		<img src="{{ absolute_url(asset('../public/images/logo.png')) }}" alt="logo de la bibliothèque" id="logo"/>
		<h1>Bienvenue sur votre page de connexion !</h1>
	</div> 
</header>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


<div class="col-4 card-body p-2 border-yellow" style="border-radius: 1rem">
    <form action="{{ path('login') }}" method="post">
		<div class="form-outline mb-2 row">
			<div class="form-outline mb-2 col-6">
        		<label class="justify-content-center" for="username">Email:</label><br>
        		<input class="form-control form-control-lg border-yellow" type="text" id="username" name="_username" value="{{ last_username }}"/><br>
			</div>
		</div>

		<div class="form-outline mb-4 row">
			<div class="form-outline mb-4 col-6">
				<label for="password">Password:</label><br>
				<input class="form-control form-control-lg border-yellow" type="password" id="password" name="_password"/><br>
			</div>
		</div>
</div>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

	<div class="d-flex justify-content-center">
        <button class="btn btn-red btn-block btn-lg" type="submit">login</button>
	</div>
    </form>
{% endblock %}

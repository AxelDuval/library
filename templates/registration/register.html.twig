{% extends 'base.html.twig' %}

{% block title %}
	Register
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{# <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css"> #}
	<link rel="stylesheet" href="{{ asset('../public/CSS/main.css')}}">
	<link rel="stylesheet" href="{{ asset('../public/CSS/adduser.css')}}">
{% endblock %}

{% block main %}
	<main class="col-10 p-0 m-0 ">
		<section class="px-5 book-list">
			<div class="container pt-5">
				<div class="row d-flex align-items-center justify-content-center">
					<div class="col-4 align-items-center">
						<h1>Créer votre compte</h1>
						<img class="my-2" src="{{ asset('../public/images/login-image.png') }}" id="login_image"
							alt="image du login" />
					</div>
					<div class="col-5">
						{{ form_start(registrationForm) }}
						<div class="col form-control form-control-lg border-yellow p-5 my-5 d-flex flex-column align-items-center"
							style="border-radius: 3em">
							<div class="pb-3">
								{{ form_row(registrationForm.email) }}
							</div>
							<div class="pb-3">
								{{ form_row(registrationForm.plainPassword, {
								label: 'Mot de Passe',
								attr : {'class' : 'form-control form-control-lg border-yellow my-4 input'}
								}) }}
							</div>
							<div class="pb-3">
								{{ form_row(registrationForm.first_name, {
								label: "Prénom"
								}) }}
							</div>
							<div class="pb-3">
								{{ form_row(registrationForm.last_name , {
								label: "Nom"
								}) }}
							</div>
							<div class="text-align-center">
								<button type="submit" class="mt-1 py-2 px-4 btn btn-yellow">Créer</button>
							</div>
						</div>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</section>
		{% include 'footer.php' %}
	</main>
{% endblock %}
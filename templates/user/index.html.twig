	<div class="example-wrapper">

		<h1>
			Les utilisateurs
		</h1>
		<a href="{{ path('app_register') }}">
			Ajouter un utlisateur
		</a>

		<table id="users" class="table">
			<thead>
				<tr>
					<th scope="col">
						Prénom
					</th>
					<th scope="col">
						Nom
					</th>
					<th scope="col">
						Numéro de téléphone
					</th>
					<th scope="col">
						Adresse
					</th>
					<th scope="col">
						Email

					</th>
					<th scope="col"></th>
					<th scope="col"></th>

				</tr>
			</thead>
			<tbody>
				<tr>
					{% for user in users %}
						<th scope="row">
							{{ user.getFirstName() }}
						</th>
						<td>
							{{ user.getLastName() }}
						</td>
						<td>
							{{ user.getPhoneNumber() }}
						</td>
						<td>
							{{ user.getAddress() }}

						</td>
						<td>
							{{ user.getEmail() }}
						</td>

						<td>
							<a href="user/edit/{{ user.getId() }}" class="btn btn-warning">
								Editer
							</a>
						</td>

						<td>
							<a href="user/delete/{{ user.getId() }}" class="btn btn-danger">
								Supprimer
							</a>
						</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
